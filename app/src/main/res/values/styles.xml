<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">#FFF</item>
    </style>

    <style name="AppTheme.Dialog.PopUp" parent="CustomAlert.Dialog">
        <item name="android:titleTextColor" tools:targetApi="m">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowEnterAnimation">@anim/dialog_scaling</item>
        <item name="android:windowExitAnimation">@anim/dialog_downscaling</item>
    </style>
</resources>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">#FFF</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/background_dialog</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="AppTheme.Dialog.PopUp" parent="AppTheme.Dialog">
        <item name="android:titleTextColor" tools:targetApi="m">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowEnterAnimation">@anim/dialog_scaling</item>
        <item name="android:windowExitAnimation">@anim/dialog_downscaling</item>
    </style>
</resources>
